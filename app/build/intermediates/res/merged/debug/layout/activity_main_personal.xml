<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        
        android:layout_height="45dp"
        android:background="@drawable/login_btn_bg"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="我的"
            android:textSize="20sp"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/MyMyScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/My_head"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:src="@drawable/bad_face" />

                <TextView
                    android:id="@+id/My_logintoast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/My_head"
                   
                    android:gravity="bottom"
                    android:text="昵称：一米阳光"
                    android:textColor="#666666"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/My_messagebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/My_head"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@+id/My_head"
                    android:background="@drawable/message_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="5dp" >

                    <ImageView
                        android:id="@+id/My_messageimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/message_new" />

                    <TextView
                        android:id="@+id/My_messagetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="2"
                        android:textSize="11dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/My_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/My_head"
                    android:layout_alignTop="@+id/My_messagebtn"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/My_messagebtn"
                    android:background="@drawable/my_address_background"
                    android:gravity="center_vertical"
                    android:paddingBottom="6dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="8dp"
                    android:paddingTop="6dp"
                    android:text="常居地：武汉"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </RelativeLayout>

             <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F4F4"
                android:padding="2dp" />
           

            <LinearLayout
                android:id="@+id/My_list_tuangou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_tab_background"
                android:paddingBottom="0dp"
                android:paddingLeft="15dp"
                android:onClick="btn_search_one"  >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_list_txt_background"
                    android:drawableLeft="@drawable/my_coupon_user_icon_press"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="   我的舞友"
                    android:textColor="#666666"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/My_list_huiyuanka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_tab_background"
                android:paddingBottom="0dp"
                android:paddingLeft="15dp"
                android:onClick="btn_search_one"  >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_list_txt_background"
                    android:drawableLeft="@drawable/my_card_icon_press"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="   我的舞群"
                    android:textColor="#666666"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/My_list_yuding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_tab_background"
                android:paddingBottom="0dp"
                android:paddingLeft="15dp"
                android:onClick="btn_alarm"  >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_list_txt_background"
                    android:drawableLeft="@drawable/my_profile_book_press"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="   时间服务"
                    android:textColor="#666666"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/My_list_menpiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_tab_background"
                android:paddingBottom="0dp"
                android:paddingLeft="15dp"
                android:onClick="btn_search_one"  >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_list_txt_background"
                    android:drawableLeft="@drawable/my_tickets_icon_press"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="   附近舞友"
                    android:textColor="#666666"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/My_list_jiudian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_tab_background"
                android:paddingBottom="0dp"
                android:onClick="btn_search_one"  >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_list_txt_background"
                    android:drawableLeft="@drawable/my_hotel_icon_press"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="8dp"
                    android:text="   周边居民"
                    android:textColor="#666666"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F4F4"
                android:padding="2dp" />

           

            <LinearLayout
                android:id="@+id/My_list_shanghuhushoucang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_tab_background"
                android:paddingBottom="0dp"
                android:paddingLeft="15dp"
                android:onClick="btn_search_one"  >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_list_txt_background"
                    android:drawableLeft="@drawable/my_favorite_icon_press"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="   视频收藏"
                    android:textColor="#666666"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/My_list_tuangoushoucang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_tab_background"
                android:paddingBottom="0dp"
                android:onClick="btn_search_one"  >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_list_txt_background"
                    android:drawableLeft="@drawable/my_tuan_fav_icon_press"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="8dp"
                    android:text="   商家收藏"
                    android:textColor="#666666"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F4F4"
                android:padding="2dp" />
            
             <LinearLayout
                android:id="@+id/My_list_caogao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_tab_background"
                android:paddingBottom="0dp"
                android:paddingLeft="15dp"
                android:onClick="btn_search_one"  >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_list_txt_background"
                    android:drawableLeft="@drawable/my_draft_icon_press"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="   检查更新"
                    android:textColor="#666666"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/My_list_guanzhu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_tab_background"
                android:paddingBottom="0dp"
                android:paddingLeft="15dp"
                android:onClick="btn_search_one"  >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_list_txt_background"
                    android:drawableLeft="@drawable/my_focus_icon_press"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="   联系我们"
                    android:textColor="#666666"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/My_list_fensi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_tab_background"
                android:paddingBottom="0dp"
                android:onClick="btn_search_one"  >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_list_txt_background"
                    android:drawableLeft="@drawable/my_fans_icon_press"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="8dp"
                    android:text="   退出登陆"
                    android:textColor="#666666"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F4F4"
                android:padding="2dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>